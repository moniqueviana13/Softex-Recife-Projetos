Var
   // Seção de Declarações das variáveis
   n1,n2,media: real
   nome: caracter

Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...
   escreval ("-------------------------")
   escreval ("BOLETIM ELETRÔNICO")
   escreval ("-------------------------")
   escreva ("Qual o nome do aluno? ")
   leia (nome)
   escreva ("Qual a primeira nota? ")
   leia (n1)
   escreva ("Qual a segunda nota? ")
   leia (n2)
   media <- (n1+n2)/2
   se (media >= 7) entao
      escreva ("Você teve um bom aproveitamento, atingindo a média ", media)
   senao
      escreva ("Você não teve um bom aproveitamento, atingindo a média ", media)
   fimse

Fimalgoritmo
